<div class="col-md-6 col-md-offset-3">
  <%= form_for(@post) do |f| %>
    <div class="form-group">
      <%= f.label :content, 'タイトル' %>
      <%= f.text_area :content, class: 'form-control', rows: 2 %>
    </div>
    
    <div class="form-group">
      <%= f.label :detail, '内容' %>
      <%= f.text_area :detail, class: 'form-control', rows: 5 %>
    </div>
    
    <div class="form-group">
      <%= f.submit "釣果を更新する", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>